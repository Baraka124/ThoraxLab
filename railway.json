{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "cmds": ["npm ci"]
        },
        "install": {
          "cmds": ["npm install"]
        },
        "build": {
          "cmds": ["npm run setup"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "node server.js",
    "healthcheckPath": "/api/health",
    "restartPolicyType": "ON_FAILURE",
    "numReplicas": 1
  }
}
