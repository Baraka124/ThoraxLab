{
  "name": "thoraxlab",
  "version": "2.0.0",
  "description": "Clinical-Industry Innovation Platform - Accelerating medical innovation through structured collaboration",
  "main": "server.js",
  "private": true,
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "setup": "mkdir -p public && echo 'Public folder created'",
    "reset-db": "rm -f thoraxlab.db && echo 'Database reset'",
    "seed": "node seed.js",
    "maintenance": "node -e \"require('./database.js').database.performMaintenance()\"",
    "health": "curl -s http://localhost:3000/api/health | jq .",
    "deploy": "npm run lint && npm test && npm run prod"
  },
  "keywords": [
    "clinical",
    "innovation",
    "collaboration",
    "healthcare",
    "medical",
    "industry",
    "platform",
    "thorax",
    "respiratory"
  ],
  "author": "ThoraxLab Team <team@thoraxlab.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thoraxlab/platform.git"
  },
  "bugs": {
    "url": "https://github.com/thoraxlab/platform/issues"
  },
  "homepage": "https://thoraxlab.com",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "uuid": "^9.0.0",
    "sqlite3": "^5.1.6",
    "sqlite": "^5.1.1",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "volta": {
    "node": "18.17.0"
  }
}
